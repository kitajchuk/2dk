{
  "name": "2dk",
  "version": "0.1.0",
  "description": "For the love of 2D. A JavaScript SDK.",
  "repository": "https://github.com/kitajchuk/2dk",
  "author": {
    "name": "Brandon Lee Kitajchuk",
    "email": "bk@kitajchuk.com",
    "url": "https://kitajchuk.com"
  },
  "license": "CC0-1.0",
  "keywords": [
    "2dk",
    "2d",
    "games",
    "gaming",
    "video games",
    "game development"
  ],
  "private": true,
  "scripts": {
    "prestart": "npm run games",
    "start": "concurrently 'npm run server' 'npm run watch:webpack' 'npm run watch:games'",
    "studio": "cd studio && npm start",
    "games": "cp -R studio/games public",
    "watch": "(npm run watch:webpack & npm run watch:games)",
    "watch:webpack": "./node_modules/.bin/webpack --env.sandbox --hide-modules --colors --watch",
    "watch:games": "./node_modules/.bin/chokidar \"studio/games/**/*.json\" -c \"npm run games\"",
    "server": "./node_modules/.bin/pm2 --no-daemon --watch -a start ecosystem.config.js",
    "server:stop": "./node_modules/.bin/pm2 stop 'all' --watch",
    "bundle": "./node_modules/.bin/webpack --env.production --progress --profile --display-modules --colors -p",
    "build": "npm run bundle",
    "postbuild": "npm run games"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "consolidate": "^0.15.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.5.1",
    "pm2": "^4.2.3",
    "websocket": "^1.0.31"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "babel-loader": "^8.1.0",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.0.1",
    "css-loader": "^3.5.3",
    "eslint": "^7.20.0",
    "eslint-webpack-plugin": "^2.5.1",
    "file-loader": "^6.0.0",
    "gsap": "^3.6.0",
    "node-sass": "^4.13.1",
    "paramalama": "^0.3.0",
    "properjs-controller": "^0.3.1",
    "properjs-debounce": "^0.3.0",
    "properjs-imageloader": "^0.4.0",
    "properjs-pagecontroller": "^0.5.0",
    "properjs-resizecontroller": "^0.3.0",
    "properjs-scrollcontroller": "^0.3.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "svg-inline-loader": "^0.8.2",
    "webpack": "^5.21.2",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^2.5.2"
  }
}
