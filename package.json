{
  "name": "2dk",
  "version": "0.1.0",
  "description": "For the love of 2D. A JavaScript SDK.",
  "repository": "https://github.com/kitajchuk/2dk",
  "author": {
    "name": "Brandon Lee Kitajchuk",
    "email": "bk@kitajchuk.com",
    "url": "https://kitajchuk.com"
  },
  "license": "CC0-1.0",
  "keywords": [
    "2dk",
    "2d",
    "games",
    "gaming",
    "video games",
    "game development"
  ],
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap:hobo",
    "prestart": "npm run static:games",
    "bootstrap": "node clutch.install.js",
    "bootstrap:hobo": "cd ./node_modules/properjs-hobo && npm i && npm run build -- 'is eq not one next prev attr last first index parent filter detach append remove trigger prepend closest children removeAttr toggleClass'",
    "start": "(npm run server & npm run watch:webpack & npm run watch:games)",
    "studio": "cd studio && npm start",
    "studio:clean": "rm -rf ./studio/static/js/editor* ; rm -rf ./studio/static/js/menu* ; rm -rf ./studio/static/js/styles* ; rm -rf ./studio/static/js/scripts*",
    "watch:games": "export NODE_ENV=sandbox ; ./node_modules/.bin/chokidar \"studio/games/**/*.json\" -c \"npm run static:games\"",
    "watch:webpack": "export NODE_ENV=sandbox ; ./node_modules/.bin/webpack --env.sandbox --hide-modules --colors --watch",
    "server": "export NODE_ENV=sandbox ; ./node_modules/.bin/pm2 --no-daemon --watch -a start ecosystem.config.js",
    "server:stop": "./node_modules/.bin/pm2 stop 'all' --watch",
    "build": "npm rebuild node-sass ; npm run bootstrap ; npm run build:netlify ; npm run static:build ; npm run static:games",
    "build:sandbox": "export NODE_ENV=sandbox ; ./node_modules/.bin/webpack --env.sandbox --hide-modules --colors",
    "build:netlify": "export NODE_ENV=netlify ; ./node_modules/.bin/webpack --env.netlify --progress --profile --display-modules --colors -p",
    "static:build": "export NODE_ENV=netlify ; export CLUTCH_CLEAN=0 ; node clutch.static.js",
    "static:clean": "export NODE_ENV=netlify ; export CLUTCH_CLEAN=1 ; node clutch.static.js",
    "static:games": "export NODE_ENV=sandbox ; cp -R studio/games static ; node clutch.games.js",
    "sess:clean": "rm -rf ./sessions/*"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "consolidate": "^0.15.1",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.5.1",
    "pm2": "^4.2.3",
    "prismic-javascript": "^2.1.3",
    "properjs-lager": "^0.1.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "session-file-store": "^1.4.0",
    "websocket": "^1.0.31",
    "xml2js": "^0.4.22"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "chokidar-cli": "^2.1.0",
    "css-loader": "^3.5.3",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "expose-loader": "^0.7.5",
    "file-loader": "^6.0.0",
    "gsap": "^3.0.4",
    "html-minifier": "^4.0.0",
    "node-sass": "^4.13.1",
    "on-build-webpack": "^0.1.0",
    "paramalama": "^0.3.0",
    "prismic-dom": "^2.1.0",
    "properjs-controller": "^0.3.1",
    "properjs-debounce": "^0.3.0",
    "properjs-hobo": "^0.3.26",
    "properjs-imageloader": "^0.4.0",
    "properjs-pagecontroller": "^0.5.0",
    "properjs-resizecontroller": "^0.3.0",
    "properjs-scrollcontroller": "^0.3.0",
    "sass-loader": "^8.0.2",
    "svg-inline-loader": "^0.8.2",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  }
}
