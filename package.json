{
  "name": "2dk",
  "version": "0.0.1",
  "private": true,
  "description": "For the love of 2D. A JavaScript SDK.",
  "repository": "https://github.com/kitajchuk/2dk",
  "engines": {
    "node": ">=14"
  },
  "author": {
    "name": "Brandon Lee Kitajchuk",
    "email": "bk@kitajchuk.com",
    "url": "https://kitajchuk.com"
  },
  "keywords": [
    "2dk",
    "2d",
    "games",
    "gaming",
    "video games",
    "game development"
  ],
  "main": "./lib/js/index.js",
  "scripts": {
    "prepare": "husky install",
    "predev": "yarn build:2dk && yarn games",
    "dev": "webpack serve --config ./configs/webpack.config.dev.js",
    "games": "cp -R studio/games dist",
    "watch:games": "./node_modules/.bin/chokidar \"studio/games/**/*.json\" -c \"yarn games\"",
    "watch:studio": "./node_modules/.bin/chokidar \"studio/client/**/*.scss\" -c \"yarn build:studio\"",
    "prebuild": "rm -rf dist",
    "build": "webpack --config ./configs/webpack.config.prod.js",
    "postbuild": "yarn games",
    "prebuild:lib": "rm -rf dist",
    "build:2dk": "webpack --config ./configs/webpack.config.2dk.js",
    "postbuild:2dk": "node-sass --output-style 'compressed' ./src/sass/2dk.scss ./dist/2dk.css",
    "build:studio": "node-sass --output-style 'compressed' ./studio/client/sass/studio.scss ./studio/public/css/studio.css",
    "predocs": "rm -rf docs",
    "docs": "jsdoc --readme 'README.md' --destination 'docs' --recurse src public",
    "postdocs": "cp -R ./public ./docs/public",
    "serve": "serve --single -p 3001 dist",
    "serve:docs": "serve -p 3002 docs",
    "lint": "eslint 'src/**/*.js' 'configs/**/*.js' --max-warnings 100",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --detectOpenHandles --coverage"
  },
  "dependencies": {
    "gsap": "^3.6.0",
    "paramalama": "^0.3.0",
    "properjs-controller": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "chokidar-cli": "^2.1.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.6.0",
    "eslint": "^8.9.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-jsdoc": "^37.9.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-webpack-plugin": "^3.1.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jsdoc": "^3.6.10",
    "lint-staged": "^12.3.4",
    "node-sass": "^7.0.1",
    "resolve-url-loader": "^5.0.0",
    "sass-loader": "^12.5.0",
    "serve": "^13.0.2",
    "style-loader": "^3.3.1",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "lint-staged": {
    "*.js": "yarn lint"
  },
  "jest": {
    "displayName": "2dk",
    "rootDir": "lib",
    "testRegex": "/[^/]*test[^/]*.js$",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/$1",
      "^.+\\.(css|less|scss)$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest-setup.js"
    ],
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": []
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "settings": {},
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "node": true
    },
    "plugins": [
      "jsx-a11y",
      "jsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jsdoc/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {}
    },
    "ignorePatterns": [
      "node_modules"
    ],
    "rules": {}
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
