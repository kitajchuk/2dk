{
  "name": "2dk",
  "version": "0.1.0",
  "description": "A Javascript 2d game development SDK.",
  "repository": "https://github.com/kitajchuk/2dk",
  "author": {
    "name": "Brandon Lee Kitajchuk",
    "email": "bk@kitajchuk.com",
    "url": "https://kitajchuk.com"
  },
  "license": "CC0-1.0",
  "keywords": [
    "2dk",
    "2d",
    "games",
    "gaming",
    "video games",
    "game development"
  ],
  "private": true,
  "scripts": {
    "postinstall": "npm run hobo",
    "prestart": "npm run static:games",
    "start": "(npm run server & npm run watch)",
    "studio": "cd studio && npm start",
    "bootstrap": "node clutch.install.js",
    "hobo": "cd ./node_modules/properjs-hobo && npm i && npm run build -- 'is eq not one next prev attr last first index parent filter detach append remove trigger prepend closest children removeAttr toggleClass'",
    "watch": "export NODE_ENV=sandbox ; ./node_modules/.bin/webpack --env.sandbox --hide-modules --colors --watch",
    "server": "export NODE_ENV=sandbox ; ./node_modules/.bin/pm2 --no-daemon --watch -a start ./ecosystem.config.js",
    "server:stop": "./node_modules/.bin/pm2 stop 'all' --watch",
    "build": "npm rebuild node-sass ; npm run bootstrap ; npm run build:netlify ; npm run static:build ; npm run static:games",
    "build:sandbox": "export NODE_ENV=sandbox ; ./node_modules/.bin/webpack --env.sandbox --hide-modules --colors",
    "build:netlify": "export NODE_ENV=netlify ; ./node_modules/.bin/webpack --env.netlify --progress --profile --display-modules --colors -p",
    "static:build": "export NODE_ENV=netlify ; export CLUTCH_CLEAN=0 ; node clutch.static.js",
    "static:clean": "export NODE_ENV=netlify ; export CLUTCH_CLEAN=1 ; node clutch.static.js",
    "static:games": "export NODE_ENV=sandbox ; cp -R ./studio/games ./static ; node clutch.games.js"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.18.3",
    "browser-sync": "^2.24.4",
    "browser-sync-webpack-plugin": "^2.2.2",
    "compression": "^1.7.2",
    "consolidate": "^0.15.1",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.28.11",
    "csurf": "^1.9.0",
    "ejs": "^2.6.1",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "expose-loader": "^0.7.5",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "gsap": "^3.0.4",
    "html-minifier": "^4.0.0",
    "node-sass": "^4.13.0",
    "paramalama": "~0.2",
    "pm2": "^3.0.4",
    "postcss": "^6.0.22",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.5",
    "postcss-preset-env": "^5.1.0",
    "prismic-dom": "^2.1.0",
    "prismic-javascript": "^2.1.3",
    "properjs-blit": "^0.2.0",
    "properjs-controller": ">=0.2.1",
    "properjs-debounce": "^0.2.0",
    "properjs-easing": "~0.2",
    "properjs-hobo": "^0.3.26",
    "properjs-imageloader": ">=0.3.1",
    "properjs-jscroll": "~0.1",
    "properjs-lager": "^0.1.0",
    "properjs-mediabox": "~0.3",
    "properjs-pagecontroller": "~0.4",
    "properjs-resizecontroller": "~0.2",
    "properjs-router": "^0.3.7",
    "properjs-scrollcontroller": "~0.2",
    "properjs-throttle": "^0.3.0",
    "properjs-tween": "~0.2",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "sass-loader": "^7.0.3",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "xml2js": "^0.4.22"
  }
}
